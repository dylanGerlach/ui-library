{
  "name": "dylangerlach-ui-library",
  "version": "1.0.10",
  "description": "React UI component library with MUI-style theming and Tailwind CSS. Includes form inputs, buttons, menus, and more with full TypeScript support.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "tsc -p tsconfig.build.json && vite build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "react-components",
    "ui-library",
    "component-library",
    "tailwind",
    "tailwindcss",
    "mui",
    "material-ui",
    "theming",
    "theme",
    "typescript",
    "form-inputs",
    "buttons",
    "dropdowns",
    "date-picker",
    "color-picker",
    "storybook"
  ],
  "author": "Dylan Gerlach",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dylangerlach/ui-library.git"
  },
  "type": "module",
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.15",
    "@seznam/compose-react-refs": "^1.0.6",
    "@vtaits/use-lazy-ref": "^0.1.4",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-colorful": "^5.6.1",
    "react-datepicker": "^8.7.0",
    "react-dom": "^19.1.1",
    "react-select": "^5.10.2",
    "sleep-promise": "^9.1.0",
    "use-is-mounted-ref": "^1.5.0",
    "use-latest": "^1.3.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.7",
    "@storybook/addon-docs": "^9.1.7",
    "@storybook/addon-vitest": "^9.1.7",
    "@storybook/react-vite": "^9.1.7",
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.13",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "dotenv-cli": "^10.0.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "storybook": "^9.1.7",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
